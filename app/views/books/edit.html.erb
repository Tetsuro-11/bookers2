<h1>Books#edit</h1>
<p>Find me in app/views/books/edit.html.erb</p>

<h1>Editing Book</h1>
<% if flash[:notice]%>
  <div>
    <%= flash[:notice]%>
  </div>
<%end%>

<% if @book.errors.any? %>
  <%= @book.errors.count %>件のerrorが発生しました
  <% @book.errors.full_messages.each do |message| %>
    <div><%= message %><div>
  <% end %>
<% end %>

<%= form_with model:@book, local:true do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <div><%= f.submit 'Update Book' %><div>
<% end %>

<%= link_to "Show", book_path(@book) %> |
<%= link_to "Back", books_path %>
